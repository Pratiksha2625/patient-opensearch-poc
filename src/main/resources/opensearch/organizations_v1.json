{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "normalizer": {
        "lowercase_normalizer": {"type": "custom", "filter": ["lowercase", "asciifolding"]}
      },
      "analyzer": {
        "folded": {"type": "custom", "tokenizer": "standard", "filter": ["lowercase", "asciifolding"]},
        "autocomplete": {"type": "custom", "tokenizer": "standard", "filter": ["lowercase", "asciifolding", "edge_ngram_filter"]}
      },
      "filter": {"edge_ngram_filter": {"type": "edge_ngram", "min_gram": 2, "max_gram": 20}}
    }
  },
  "mappings": {
    "dynamic": "false",
    "properties": {
      "id": {"type": "keyword"},
      "name": {
        "type": "text",
        "analyzer": "folded",
        "fields": {
          "keyword": {"type": "keyword", "normalizer": "lowercase_normalizer"},
          "autocomplete": {"type": "text", "analyzer": "autocomplete"}
        }
      }
    }
  }
}